<bpel:process name="ManufacturerProcess"
         targetNamespace="http://supplychain.org/manufacturer"
         suppressJoinFailure="yes"
         xmlns:tns="http://supplychain.org/manufacturer"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://supplychain.org/shipper" 
         xmlns:ns2="http://supplychain.org/store"
         xmlns:data="http://supplychain.org/data">

    <bpel:import namespace="http://supplychain.org/store" location="Store.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import namespace="http://supplychain.org/shipper" location="Shipper.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import namespace="http://supplychain.org/manufacturer" location="Manufacturer.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    
    <bpel:partnerLinks>
        <bpel:partnerLink name="client" partnerLinkType="tns:ManufacturerPLT" myRole="ManufacturerProvider"/>
        
        <bpel:partnerLink name="shipperPL" partnerLinkType="ns1:ShipperPLT" partnerRole="ShipperProvider"></bpel:partnerLink>
        
        <bpel:partnerLink name="storeCallbackPL" partnerLinkType="ns2:StoreCallbackPLT" partnerRole="StoreCallbackProvider"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <bpel:variables>
        <bpel:variable name="input" messageType="tns:OrderMsg"/>
        <bpel:variable name="shipperReqVar" messageType="ns1:ShippingMsg"/>
        <bpel:variable name="storeStatusVar" messageType="ns2:StatusMsg"/>
    </bpel:variables>

    <bpel:sequence name="main">
        <!-- Main process sequence -->
          <bpel:receive name="receiveInput"  
              partnerLink="client" 
              operation="requestOrder" 
              variable="input" 
              createInstance="yes" />
        
        <bpel:wait name="ProductionTime">
            <bpel:for>'P0Y0M0DT0H0M30S'</bpel:for>
        </bpel:wait>
        
        <bpel:assign validate="no" name="InitializeVars">
            <bpel:copy>
                <bpel:from>
                    <bpel:literal>
                        <data:ShippingDetails xmlns:data="http://supplychain.org/data">
                            <data:orderID></data:orderID>
                            <data:address></data:address>
                        </data:ShippingDetails>
                    </bpel:literal>
                </bpel:from>
                <bpel:to part="payload" variable="shipperReqVar"/>
            </bpel:copy>
            <bpel:copy>
                <bpel:from>
                    <bpel:literal>
                        <data:StatusInfo xmlns:data="http://supplychain.org/data">
                            <data:orderID></data:orderID>
                            <data:status></data:status>
                        </data:StatusInfo>
                    </bpel:literal>
                </bpel:from>
                <bpel:to part="payload" variable="storeStatusVar"/>
            </bpel:copy>
        </bpel:assign>

        <bpel:assign validate="no" name="PrepareData">
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[data:orderID]]></bpel:query>
                </bpel:from>
                <bpel:to part="payload" variable="shipperReqVar">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[data:orderID]]></bpel:query>
                </bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from>
                    <bpel:literal>123 Factory Lane</bpel:literal>
                </bpel:from>
                <bpel:to part="payload" variable="shipperReqVar">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[data:address]]></bpel:query>
                </bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[data:orderID]]></bpel:query>
                </bpel:from>
                <bpel:to part="payload" variable="storeStatusVar">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[data:orderID]]></bpel:query>
                </bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from>
                    <bpel:literal>TERMINE</bpel:literal>
                </bpel:from>
                <bpel:to part="payload" variable="storeStatusVar">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[data:status]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>

        <bpel:invoke name="CallShipper" 
                     partnerLink="shipperPL" 
                     operation="requestShipping" 
                     inputVariable="shipperReqVar" />
                     
        <bpel:invoke name="CallbackStore" 
                 partnerLink="storeCallbackPL" 
                 operation="receiveManufacturingStatus" 
                 inputVariable="storeStatusVar" />
        
    </bpel:sequence>
</bpel:process>